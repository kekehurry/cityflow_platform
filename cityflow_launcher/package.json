{
  "name": "cityflow_launcher",
  "version": "0.25.4-beta",
  "description": "",
  "author": {
    "name": "Kai Hu",
    "email": "arhukai1111@gmail.com"
  },
  "main": "src/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build-icons": "electron-icon-builder --input=./public/icon.png --output=./assets --flatten",
    "electron": "npm run build && rm -rf node_modules/electron/dist/Electron.app/Contents/Resources/docker && cp -r ./docker node_modules/electron/dist/Electron.app/Contents/Resources/docker && electron .",
    "start": "react-scripts start",
    "dist": "npm run build && electron-builder --mac --win --publish=always"
  },
  "build": {
    "appId": "com.cityflow.cityflow_launcher",
    "productName": "CityFlow",
    "copyright": "Copyright Â© 2025 CityFlow",
    "releaseInfo": {
      "releaseNotesFile": "release.md"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "kekehurry",
      "repo": "cityflow_platform",
      "releaseType": "release"
    },
    "extraMetadata": {
      "main": "src/main.js"
    },
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "extraResources": [
        {
          "from": "./docker/win32",
          "to": "docker/win32"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "extraResources": [
        {
          "from": "./docker/darwin",
          "to": "docker/darwin/"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets",
      "extraResources": [
        {
          "from": "./docker/darwin",
          "to": "docker/linux"
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^9.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "style-loader": "^4.0.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.5",
    "@mui/material": "^6.4.5",
    "@toolpad/core": "^0.12.0",
    "electron-icon-builder": "^2.0.1",
    "electron-updater": "^6.3.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "^5.0.1",
    "three": "^0.173.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
